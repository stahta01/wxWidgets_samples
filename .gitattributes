*.hhk       eol=lf
*.hhp       eol=lf
*.hpj       eol=lf
*.htm       eol=lf
*.html      eol=lf
*.ini       eol=lf
*.map       eol=lf
*.pnm       eol=lf
*.po        eol=lf
*.r         eol=lf
*.tex       eol=lf
*.txt       eol=lf
*.workspace eol=lf
*.xbm       eol=lf
*.xrc       eol=lf
*.xpm       eol=lf
results     eol=lf

####
# Unix-specific files that require LF:
#
*.h.in       eol=lf
*.m4         eol=lf
*.sh         eol=lf
configure.in eol=lf
Makefile.am  eol=lf
Makefile.in  eol=lf
makefile.unx eol=lf
#
config.guess eol=lf
config.sub   eol=lf
configure    eol=lf
configure.in eol=lf


